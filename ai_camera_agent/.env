# .env 示例文件
# ============================================================
# AI Camera Agent 环境变量配置
# ============================================================

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=false

# 视频源配置 (0=默认摄像头, 或RTSP地址)
VIDEO_SOURCE=0
VIDEO_TARGET_FPS=25
VIDEO_JPEG_QUALITY=80

# YOLO配置
YOLO_USE_LOCAL=true
YOLO_MODEL_PATH=yolov8s-worldv2.pt
YOLO_DETECT_FPS=5
YOLO_CONFIDENCE=0.35

# VLM配置 (通用)
VLM_API_URL=https://ark.cn-beijing.volces.com/api/v3/chat/completions
VLM_API_KEY=c44c935c-616b-4c15-9110-7c08ac67cf84
VLM_MODEL=doubao-seed-1-6-flash-250828

# 监控LLM配置 (可选，不填则使用VLM配置)
# MONITOR_LLM_URL=
# MONITOR_LLM_KEY=
# MONITOR_LLM_MODEL=

# 对话LLM配置 (可选，不填则使用VLM配置)
# CHAT_LLM_URL=
# CHAT_LLM_KEY=
# CHAT_LLM_MODEL=gpt-4-turbo-preview

# 数据库配置
DB_PATH=monitor_logs.db

# 邮件配置
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
SENDER_EMAIL=
SENDER_PASSWORD=
RECEIVER_EMAIL=